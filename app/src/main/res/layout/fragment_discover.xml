<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#c6a5a5"
    android:orientation="vertical"
    tools:context="com.mph.basedroid.fragment.DiscoverFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.design.widget.TabLayout
            android:id="@+id/tl_htool"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:tabBackground="@drawable/tabl_bg_seletor"
            app:tabIndicatorColor="#2dc6dd"
            app:tabSelectedTextColor="#2dc6dd"
            app:tabIndicatorHeight="2dp"
            app:tabTextAppearance="@style/MyTabLayoutTextAppearance"
            app:tabTextColor="#666666" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#2dc6dd"
            android:layout_alignBottom="@+id/tl_htool"
            />

    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/tl_htool_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
